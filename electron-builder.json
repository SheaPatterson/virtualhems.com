{
  "productName": "HEMS Ops Center",
  "appId": "com.hems.opscenter",
  "copyright": "Copyright Â© 2024 SRP Consulting Group, LLC.",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "public/favicon.ico",
    "publisherName": "Shea Patterson"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "runAfterFinish": true
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["universal"]
      }
    ],
    "category": "public.app-category.utilities",
    "icon": "public/favicon.ico"
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "SheaPatterson",
      "repo": "HEMS"
    }
  ]
}