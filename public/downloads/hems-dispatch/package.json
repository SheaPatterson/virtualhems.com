{
  "name": "hems-tactical-bridge",
  "version": "5.2.0",
  "private": true,
  "description": "Standalone data bridge for X-Plane and HEMS OPS-CENTER",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build": "npm run build:mac && npm run build:win"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.7"
  },
  "build": {
    "appId": "com.hems.tacticalbridge",
    "productName": "HEMS Tactical Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}