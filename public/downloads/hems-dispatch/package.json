{
  "name": "hems-tactical-bridge",
  "version": "5.3.0",
  "private": true,
  "description": "HEMS Tactical Ops Bridge",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "pack": "electron-builder",
    "pack:win": "electron-builder --win"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^39.2.7"
  },
  "build": {
    "appId": "com.hems.tacticalbridge",
    "productName": "HEMS Tactical Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "package.json",
      "ui/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    }
  }
}